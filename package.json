{
  "name": "nodejs-typescript-boilerplate",
  "type": "module",
  "scripts": {
    "dev": "tsx watch --env-file=.env src/server.ts",
    "build": "esbuild src/server.ts --bundle --platform=node --packages=external --format=esm --outfile=dist/server.js",
    "check": "tsc --noEmit",
    "format": "prettier ./src --write"
  },
  "devDependencies": {
    "@types/node": "^20.19.0",
    "esbuild": "^0.25.5",
    "prettier": "3.5.3",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  }
}
